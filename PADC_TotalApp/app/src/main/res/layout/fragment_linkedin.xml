<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/android_background"
            tools:context=".fragments.LinkedInFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTintMode="screen"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="15dp">

        <LinearLayout
            android:id="@+id/linear_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/cd_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="128dp"
                android:background="@android:color/white">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <Button
                        android:id="@+id/btn_profile_edit"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:tint="@android:color/white"
                        android:background="@android:color/transparent"
                        android:elevation="0dp"
                        android:drawableTint="@color/colorPrimaryDark"
                        android:drawableRight="@drawable/ic_create_black_24dp"/>

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="55dp"
                        android:fontFamily="sans-serif-light"
                        android:text="Shelton Cooper"
                        android:textColor="@android:color/black"
                        android:textSize="24sp"/>

                    <TextView
                        android:id="@+id/tv_role"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_name"
                        android:layout_centerHorizontal="true"
                        android:fontFamily="sans-serif"
                        android:text="Mobile Solution Developer"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        />

                    <TextView
                        android:id="@+id/tv_company"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_role"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"
                        android:text="India-Myanmar Center of Enhanced IT Skills (IMCEITS)"
                        android:textSize="14sp"
                        />

                    <TextView
                        android:id="@+id/tv_location"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_company"
                        android:layout_centerHorizontal="true"
                        android:drawableRight="@drawable/ic_supervisor_account_black_24dp"
                        android:drawableTint="@android:color/darker_gray"
                        android:gravity="center"
                        android:text="Singapore â€¢ 360 "
                        android:textSize="14sp"
                        />

                    <TextView
                        android:id="@+id/tv_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_location"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="16dp"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:text="End to End Mobile Solution Developer based in Myanmar and Singapore, Passionate on..."
                        android:textSize="14sp"
                        />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iv_person_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="60dp"
            android:src="@drawable/avatar"
            app:civ_border_color="#ff335577"
            app:civ_border_width="5dp"
            />

        <Button
            android:id="@+id/btn_settings"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:tint="@android:color/white"
            android:background="@android:color/transparent"
            android:elevation="0dp"
            android:drawableTint="@android:color/white"
            android:drawableRight="@drawable/ic_settings_black_24dp"/>

        <LinearLayout
            android:id="@+id/linear_counting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_profile"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="1dp"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="37"
                        android:textColor="@color/colorPrimary"
                        android:textSize="22sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Who's viewed your profile"
                        android:textSize="12sp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/colorPrimary"
                        android:textSize="22sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Who's viewed your share"
                        android:textSize="12sp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/cd_strengthen_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/linear_counting"
            android:layout_marginTop="8dp"
            card_view:cardCornerRadius="3dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_border"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_strengthen_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Strengthen your profile"/>

                <Button
                    android:id="@+id/btn_close_strengthen"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:tint="@android:color/white"
                    android:background="@android:color/transparent"
                    android:elevation="0dp"
                    android:drawableTint="@android:color/darker_gray"
                    android:drawableRight="@drawable/ic_clear_black_16dp"/>

                <ImageView
                    android:id="@+id/iv_strengthen_profile"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_below="@id/tv_strengthen_title"
                    android:layout_marginTop="8dp"
                    android:src="@drawable/ic_local_play_black_24dp"/>

                <TextView
                    android:id="@+id/tv_showcase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/iv_strengthen_profile"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@id/iv_strengthen_profile"
                    android:fontFamily="sans-serif-light"
                    android:text="Showcase what you know, add suggested skills to your profile"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/cd_experience"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@id/cd_strengthen_profile"
            android:layout_marginTop="8dp"
            card_view:cardCornerRadius="3dp"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card_border"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tv_experience"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Experience"/>


                <Button
                    android:id="@+id/btn_experience_edit"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:tint="@android:color/white"
                    android:background="@android:color/transparent"
                    android:elevation="0dp"
                    android:drawableTint="@color/colorPrimaryDark"
                    android:drawableRight="@drawable/ic_create_black_24dp"/>


            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</ScrollView>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".fragments.WunZinnFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#eeeeee"
        android:orientation="vertical"
        android:padding="16dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="222dp">

            <ImageView
                android:layout_width="152dp"
                android:layout_height="220dp"
                android:layout_weight="0"
                android:background="@android:color/white"
                android:elevation="2dp"
                android:padding="8dp"
                android:src="@drawable/brief_history_of_time_book_cover"
                />

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_weight="1">

                <com.passion.padc_totalapp.components.textviews.MMTextView
                    android:id="@+id/tv_book_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:text="A Brief History of Time"
                    android:textAppearance="?android:textAppearanceLarge"/>

                <TextView
                    android:id="@+id/tv_author_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_book_title"
                    android:layout_marginTop="4dp"
                    android:text="Stephen Hawking"
                    android:textAppearance="?android:textAppearanceMedium"/>

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_author_name"
                    android:layout_marginTop="4dp"
                    android:text="2,500 Kyats"
                    android:textAppearance="?android:textAppearanceMedium"/>

                <Button
                    android:id="@+id/btn_read_sample"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/button_wun_zinn"
                    android:text="Sample"
                    android:textAllCaps="false"/>

                <Button
                    android:id="@+id/btn_buy"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_above="@id/btn_read_sample"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/button_wun_zinn"
                    android:text="Buy"
                    android:textAllCaps="false"/>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="File size: 2.45 MB"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold|italic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:text="Summary"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/textWunZinn"
            android:textStyle="bold|italic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_xlarge"
            android:text="..."
            android:textAppearance="?android:textAppearanceMedium"
            android:textStyle="bold|italic"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_large"
            android:text="Related books"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/textWunZinn"
            android:textStyle="bold|italic"/>

        <com.passion.padc_totalapp.components.textviews.MMTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_medium"
            android:layout_marginTop="@dimen/margin_medium_3"
            android:text="&quot;ဟာသ&quot; စာအုပ္အမ်ိဳးအစားမ်ား"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/textWunZinn"
            android:textStyle="bold"/>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@android:color/transparent"
                    card_view:cardElevation="0dp"
                    android:layout_marginRight="@dimen/margin_medium">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_bookcover"
                            android:layout_width="120dp"
                            android:layout_height="168dp"
                            android:paddingTop="@dimen/margin_medium"
                            android:paddingBottom="@dimen/margin_medium"
                            android:background="@android:color/white"
                            android:elevation="2dp"
                            android:src="@drawable/rework_book_cover"/>

                        <com.passion.padc_totalapp.components.textviews.MMTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_bookcover"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="@dimen/margin_small"
                            android:gravity="center_horizontal"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_regular_2x"
                            android:text="Rework"/>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@android:color/transparent"
                    card_view:cardElevation="0dp"
                    android:layout_marginRight="@dimen/margin_medium">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_bookcover2"
                            android:layout_width="120dp"
                            android:layout_height="168dp"
                            android:paddingTop="@dimen/margin_medium"
                            android:paddingBottom="@dimen/margin_medium"
                            android:background="@android:color/white"
                            android:elevation="2dp"
                            android:src="@drawable/false_stars_book_cover"/>

                        <com.passion.padc_totalapp.components.textviews.MMTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_bookcover2"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="@dimen/margin_small"
                            android:gravity="center_horizontal"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:text="The fault in our stars"/>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    card_view:cardBackgroundColor="@android:color/transparent"
                    card_view:cardElevation="0dp"
                    android:layout_marginRight="@dimen/margin_medium">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_bookcover3"
                            android:layout_width="120dp"
                            android:layout_height="168dp"
                            android:paddingTop="@dimen/margin_medium"
                            android:paddingBottom="@dimen/margin_medium"
                            android:background="@android:color/white"
                            android:elevation="2dp"
                            android:src="@drawable/steve_job_book_cover"/>

                        <com.passion.padc_totalapp.components.textviews.MMTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_bookcover3"
                            android:layout_centerHorizontal="true"
                            android:layout_margin="@dimen/margin_small"
                            android:gravity="center_horizontal"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_regular_2x"
                            android:text="The innovation secrets of Steve Jobs"/>

                    </RelativeLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>

        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>
